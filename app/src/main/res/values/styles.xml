<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#f45c43</item>
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="colorAccent">#eb324b</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#f45c43</item>
        <item name="colorPrimaryDark">#eb324b</item>
        <item name="colorAccent">#eb324b</item>

        <!-- <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        -->
    </style>

    <style name="AppTheme.Splash" parent="AppTheme"/>
    <style name="FullscreenTheme" parent="AppTheme"/>
    <style name="AppTheme.TextViewStyleBigLittle" parent="AppTheme">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <!--<item name="android:fontFamily">@font/simpel</item>-->
    </style>

    <style name="AppTheme.TextViewStyleNormal" parent="AppTheme">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textSize">@dimen/_4sdp</item>
        <!--<item name="android:fontFamily">@font/simpel</item>-->
    </style>

    <style name="AppTheme.TextViewStyleSmall" parent="AppTheme">
        <item name="android:gravity">center_vertical</item>

        <item name="android:textSize">@dimen/_13sdp</item>
        <!--<item name="android:fontFamily">@font/simpel</item>-->
    </style>

    <style name="AppTheme.TextViewStyleSmallVery" parent="AppTheme">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textSize">@dimen/_4sdp</item>
        <!--<item name="android:fontFamily">@font/simpel</item>-->
    </style>

    <style name="AppTheme.EditTextStyleSmall" parent="AppTheme">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:maxLines">1</item>
        <!--<item name="android:fontFamily">@font/simpel</item>-->
    </style>

    <style name="AppTheme.EditTextStyleSmallSecond" parent="AppTheme">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:maxLines">1</item>
        <!--<item name="android:fontFamily">@font/simpel</item>-->
    </style>

    <style name="AppTheme.EditTextStyleSmall_Multiline" parent="AppTheme">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <!--<item name="android:fontFamily">@font/simpel</item>-->
    </style>

    <style name="AppTheme.ButtonMain" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/main_bg_button</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:minHeight">@dimen/_32sdp</item>
        <item name="android:maxHeight">@dimen/_32sdp</item>
    </style>
    <style name="AppTheme.ButtonMain3" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_main</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:minHeight">@dimen/_32sdp</item>
        <item name="android:maxHeight">@dimen/_32sdp</item>
    </style>
    <style name="AppTheme.ButtonMain2" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/main_bg_button</item>
        <!--<item name="android:fontFamily">@font/simpel</item>-->
        <item name="android:minHeight">@dimen/_32sdp</item>
        <item name="android:maxHeight">@dimen/_32sdp</item>
    </style>
    <style name="AppTheme.ButtonMains" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/main_bg_button</item>
        <!--<item name="android:fontFamily">@font/simpel</item>-->

    </style>
    <style name="AppTheme.Image" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/main_bg_button</item>
        <!--<item name="android:fontFamily">@font/simpel</item>-->
        <item name="android:minHeight">@dimen/_32sdp</item>
        <item name="android:maxHeight">@dimen/_32sdp</item>
    </style>

    <style name="AppCompatAlertDialogStyle"></style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>

        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="AuthTabBarStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
