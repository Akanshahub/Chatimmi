<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_bg"
        android:minHeight="115dp"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp">

            <ImageView
                android:id="@+id/ivBtnBack"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/_7sdp"
                app:srcCompat="@drawable/ic_back_arrow_ico"
                app:tint="#fff" />

            <com.chatimmi.custom.CircleImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toEndOf="@id/ivBtnBack"
                android:elevation="@dimen/_8sdp"
                android:src="@drawable/image3"
                app:civ_border_color="@color/white"
                app:civ_border_overlay="true"
                app:civ_border_width="@dimen/_2sdp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@id/image"

                android:fontFamily="@font/montserrat_bold"
                android:text="@string/create_account"
                android:textColor="@color/title_text_color_white"
                android:textSize="18.3dp" />

            <ImageView
                android:id="@+id/ivDots"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:clickable="true"
                android:focusable="true"
                app:srcCompat="@drawable/dots_ico"
                app:tint="#fff" />

        </RelativeLayout>
    </RelativeLayout>
</layout>

