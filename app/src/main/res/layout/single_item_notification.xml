<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7sdp">


        <com.chatimmi.custom.CircleImageView
            android:id="@+id/ivImages"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerVertical="true"
            android:elevation="0dp"
            android:src="@drawable/chat_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/ivImages"
            android:orientation="vertical">

            <!--           <TextView
                           android:id="@+id/transport"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/montserrat_regular"
                           android:text="@string/various"
                           android:textColor="@color/black_two"
                           android:textSize="@dimen/_12sdp"
                           tools:ignore="SpUsage" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:lineSpacingExtra="-10.1sp"
                android:text="@string/various"
                android:textColor="@color/black_two"
                android:textSize="11.7sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/date_and_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/ago"
                android:textColor="@color/browen_grey"
                android:textSize="@dimen/_10sdp"
                tools:ignore="SpUsage" />
        </LinearLayout>
    </RelativeLayout>
</layout>