<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_days_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_margin="@dimen/_15sdp"
        android:gravity="center"
        android:minWidth="@dimen/_100sdp"
        android:padding="@dimen/_5sdp"

        android:text="zxxzx"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_marginStart="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

             <TextView
                 android:id="@+id/my_message"
                 android:layout_width="99dp"
                 android:layout_height="33.7dp"
                 android:layout_alignParentEnd="true"
                 android:layout_gravity="center"
                 android:layout_marginStart="@dimen/_35sdp"
                 android:layout_marginEnd="@dimen/_8sdp"
                 android:background="@drawable/rounded_primary_right_chat_border"
                 android:fontFamily="@font/montserrat_regular"
                 android:gravity="center|start"
                 android:paddingStart="@dimen/_8sdp"
                 android:paddingTop="@dimen/_6sdp"
                 android:paddingEnd="@dimen/_8sdp"
                 android:paddingBottom="@dimen/_6sdp"
                 android:text="Hello dcfdsfffffffddvdfv"
                 android:textAlignment="center"
                 android:textColor="@color/black"
                 android:textSize="11dp" />

         </RelativeLayout>-->

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ly_msg_view"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/my_message"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/rounded_primary_right_chat_border"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center|end"
                    android:paddingStart="@dimen/_30sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_30sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="Hello"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />


            </LinearLayout>



        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ly_my_image_view"
            android:layout_width="133.3dp"
            android:layout_height="133.3dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:visibility="gone">


            <com.chatimmi.helper.RoundRectCornerImageView
                android:id="@+id/iv_My_image_chat"
                android:layout_width="133.3dp"
                android:layout_height="133.3dp"
                android:layout_gravity="end"

                android:padding="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/user_img"
                android:visibility="visible"
                />

            <ProgressBar
                android:id="@+id/my_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="end"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/iv_msg_tick"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"

            android:src="@drawable/ic_inactive_tick_ico"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_5sdp" />


        <TextView
            android:id="@+id/my_date_time_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="end|top"
            android:text="25/12/2017 800 pm"
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

</LinearLayout>
